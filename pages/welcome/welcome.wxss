.img-avatar {
  width:200rpx;
  height:200rpx;
  margin-top: 160rpx;
}
.welcome-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #b3d4db;
  height: 100vh;
}
.user-name {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}
.moto-container {
  margin-top: 200rpx;
  border: 1rpx solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}